@model Nop.Plugin.Misc.RepairAppointment.Models.RepairAppointmentModel
@using Nop.Web.Framework.UI
@{
    Layout = "_ColumnsOne";
    NopHtml.AddTitleParts("Appointment Confirmation");
    NopHtml.AppendPageCssClassParts("html-appointment-confirmation-page");
    NopHtml.AppendCssFileParts("~/Plugins/Misc.RepairAppointment/Content/appointment.css");
}

<div class="page repair-appointment-page">
    <div class="page-title">
        <h1>‚úÖ Appointment Confirmed!</h1>
        <p class="page-subtitle">Your repair appointment has been successfully booked</p>
    </div>

    <div class="page-body">
        <!-- Confirmation Success Card -->
        <div class="fieldset confirmation-success-card">
            <div class="title">
                <strong>üéâ Booking Successful</strong>
            </div>
            <div class="form-fields">
                <div class="confirmation-hero">
                    <div class="success-icon">
                        <span class="checkmark">‚úì</span>
                    </div>
                    <h2>Your repair appointment is confirmed!</h2>
                    <div class="confirmation-code-display">
                        <span class="code-label">Confirmation Code</span>
                        <span class="code-value">@Model.ConfirmationCode</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointment Details Card -->
        <div class="fieldset appointment-details-card">
            <div class="title">
                <strong>üìã Appointment Details</strong>
            </div>
            <div class="form-fields">
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="detail-label">Customer Name</span>
                        <span class="detail-value">@Model.CustomerName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email Address</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Phone Number</span>
                        <span class="detail-value">@Model.Phone</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Appointment Date</span>
                        <span class="detail-value">@Model.AppointmentDate.ToString("dddd, MMMM dd, yyyy")</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Time Slot</span>
                        <span class="detail-value">@Model.TimeSlot</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Device Type</span>
                        <span class="detail-value">@Model.DeviceType</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.DeviceBrand) && !string.IsNullOrEmpty(Model.DeviceModel))
                    {
                        <div class="detail-item">
                            <span class="detail-label">Device Details</span>
                            <span class="detail-value">@Model.DeviceBrand @Model.DeviceModel</span>
                        </div>
                    }
                    <div class="detail-item full-width">
                        <span class="detail-label">Issue Description</span>
                        <span class="detail-value">@Model.IssueDescription</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Status</span>
                        <span class="status-badge status-confirmed">@Model.StatusName</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Important Information Card -->
        <div class="fieldset important-info-card">
            <div class="title">
                <strong>‚ÑπÔ∏è Important Information</strong>
            </div>
            <div class="form-fields">
                <div class="info-list">
                    <div class="info-item">
                        <span class="info-icon">‚è∞</span>
                        <span>Please arrive 5-10 minutes before your appointment time</span>
                    </div>
                    <div class="info-item">
                        <span class="info-icon">üì±</span>
                        <span>Bring your device and any relevant accessories or chargers</span>
                    </div>
                    <div class="info-item">
                        <span class="info-icon">üìß</span>
                        <span>A confirmation email has been sent to @Model.Email</span>
                    </div>
                    <div class="info-item">
                        <span class="info-icon">üíæ</span>
                        <span>Save your confirmation code: <strong>@Model.ConfirmationCode</strong></span>
                    </div>
                    <div class="info-item">
                        <span class="info-icon">üìû</span>
                        <span>For cancellation or rescheduling, contact us as soon as possible</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="form-buttons">
            <button onclick="window.print();" class="btn-appointment-submit print-btn">
                <span class="btn-icon">üñ®Ô∏è</span>
                <span class="btn-text">Print Confirmation</span>
            </button>
            <a href="@Url.RouteUrl("HomePage")" class="btn-appointment-submit home-btn">
                <span class="btn-icon">üè†</span>
                <span class="btn-text">Return to Home</span>
            </a>
        </div>
    </div>
</div>

