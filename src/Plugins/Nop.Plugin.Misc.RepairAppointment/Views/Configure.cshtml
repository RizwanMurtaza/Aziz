@model Nop.Plugin.Misc.RepairAppointment.Models.ConfigurationModel
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Repair Appointment Settings";
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("RepairAppointments.Settings");
}

<form asp-controller="RepairAppointment" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            Repair Appointment Settings
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="EnableAppointmentSystem" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="EnableAppointmentSystem" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="SlotDurationMinutes" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SlotDurationMinutes" />
                                <span class="hint">Duration of each appointment slot in minutes (default: 30)</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="MaxAppointmentsPerSlot" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="MaxAppointmentsPerSlot" />
                                <span class="hint">Default maximum number of appointments allowed per time slot (default: 1). Can be overridden for specific dates/times in Slot Management.</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="BusinessStartTime" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="BusinessStartTime" />
                                <span class="hint">Business start time in 24-hour format (e.g., 09:00)</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="BusinessEndTime" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="BusinessEndTime" />
                                <span class="hint">Business end time in 24-hour format (e.g., 17:00)</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="SelectedWorkingDays" />
                            </div>
                            <div class="col-md-9">
                                <div class="working-days-selection">
                                    @for (int i = 0; i < Model.AvailableWorkingDays.Count; i++)
                                    {
                                        var day = Model.AvailableWorkingDays[i];
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input type="checkbox" class="custom-control-input"
                                                   id="workingday_@day.Value" name="SelectedWorkingDays" value="@day.Value"
                                                   @(Model.SelectedWorkingDays.Contains(int.Parse(day.Value)) ? "checked" : "") />
                                            <label class="custom-control-label" for="workingday_@day.Value">
                                                @day.Text
                                            </label>
                                        </div>
                                    }
                                </div>
                                <span class="hint">Select the days when appointments can be scheduled. By default, Sunday is off.</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="MaxAdvanceBookingDays" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="MaxAdvanceBookingDays" />
                                <span class="hint">How many days in advance customers can book appointments (0 = unlimited)</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="SendConfirmationEmail" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SendConfirmationEmail" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="SendReminderEmail" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SendReminderEmail" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="ReminderHoursBeforeAppointment" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ReminderHoursBeforeAppointment" />
                                <span class="hint">Send reminder email X hours before appointment</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="RequireCustomerLogin" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="RequireCustomerLogin" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<style>
.working-days-selection .custom-control-inline {
    margin-right: 15px;
    margin-bottom: 10px;
}

.working-days-selection .custom-control-label {
    font-weight: normal;
}

.working-days-selection .custom-control-input:checked ~ .custom-control-label {
    font-weight: bold;
    color: #28a745;
}
</style>